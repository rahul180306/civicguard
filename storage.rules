rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return isSignedIn() && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin'; }

    // User media under media/{uid}/...
    match /media/{uid}/{allPaths=**} {
      allow read: if isSignedIn() && (uid == request.auth.uid || isAdmin());
      allow write: if isSignedIn() && uid == request.auth.uid;

      // Limit size (~10MB) and basic content types
      allow write: if request.resource.size < 10 * 1024 * 1024 &&
                   request.resource.contentType.matches('image/.*|video/.*');
    }

    // Deny everything else by default
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
